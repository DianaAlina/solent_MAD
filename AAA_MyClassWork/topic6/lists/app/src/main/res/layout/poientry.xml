    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/poi_name"
        android:textSize="12pt"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/poi_desc"
        android:textSize="8pt"/>

</LinearLayout>